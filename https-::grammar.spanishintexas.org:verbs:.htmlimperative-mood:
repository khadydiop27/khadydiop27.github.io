		#navbar li.about a:first-child, 
		#navbar li.education a:first-child, 
		#navbar li.research a:first-child {
			top: 0px;
			height: auto;
			text-align: left;
			background: transparent !important;
			color: #006666;
		}
		
		#navbar li.about,
		#navbar li.education,
		#navbar li.research {
			height: auto;
			background: #fff !important;
			padding-bottom: 15px;
			margin-top: 8px;
		}

		#navbar:target > ul
		{
			display: block;
		}
		
		#navbar > ul > li
		{
			width: 100%;
			height: auto;
			/*float: none;*/
			display: block;
		}
 
    /* second level */
 
    #navbar li ul
    {
       /*position: static;*/
			display: block !important;
			top: 15px;
    }
		
    #navbar li ul li{
			display: block;
			width: 100% !important;
			padding-left: 15px;
		}
		
    #navbar li.about li a,
		#navbar li.education li a,
		#navbar li.research li a {
			border: none;
		}
		
		#navbar li li a:hover {
			color: color: #006666;
		}
		
		ul
    {
       position: static;
			 display:none;
    }
		
		/*#logo a
		{
       margin-left: 20px;
		}*/
		
		#buttons {
			position: absolute;
			/*display: inline;*/
			display: none;
		}
		
}</style>

